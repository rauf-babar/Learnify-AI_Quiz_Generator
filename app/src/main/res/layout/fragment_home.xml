<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_white"
    tools:context=".HomeFragment">

    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:id="@+id/progress_bar_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:visibility="gone"
        app:indicatorColor="@color/figma_purple_main"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:elevation="10dp"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/progress_bar_home">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cl_home_container"
            android:paddingBottom="40dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_profile_card"
                android:layout_width="0dp"
                android:layout_height="129dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_profile_card_gradient">

                    <ImageView
                        android:id="@+id/iv_profile_image"
                        android:layout_width="81dp"
                        android:layout_height="81dp"
                        android:layout_marginStart="16dp"
                        android:background="@drawable/bg_profile_image_circle"
                        android:contentDescription="@string/profile_picture"
                        android:padding="7dp"
                        android:src="@drawable/ic_profile"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.347" />

                    <TextView
                        android:id="@+id/tv_welcome_message"
                        style="@style/TextAppearance.ProfileCard.Role"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:text="@string/welcome_back"
                        android:textStyle="italic"
                        android:textColor="@color/white"
                        app:layout_constraintBottom_toTopOf="@id/tv_user_name"
                        app:layout_constraintStart_toEndOf="@id/iv_profile_image"
                        app:layout_constraintTop_toTopOf="@id/iv_profile_image"
                        app:layout_constraintVertical_chainStyle="packed" />

                    <TextView
                        android:id="@+id/tv_user_name"
                        style="@style/TextAppearance.ProfileCard.Name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/user"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        app:layout_constraintBottom_toBottomOf="@id/iv_profile_image"
                        app:layout_constraintStart_toStartOf="@id/tv_welcome_message"
                        app:layout_constraintTop_toBottomOf="@id/tv_welcome_message" />

                    <ImageView
                        android:id="@+id/iv_edit_profile"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="16dp"
                        android:contentDescription="@string/edit_profile"
                        android:src="@drawable/ic_edit"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tv_quiz_section_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="24dp"
                android:text="@string/generate_your_ai_quiz"
                android:textColor="@color/text_primary_dark"
                android:textSize="22sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cv_profile_card" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_create_from_document"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="24dp"
                android:backgroundTint="@color/illustration_check_light"
                android:gravity="center"
                android:paddingStart="24dp"
                android:paddingEnd="16dp"
                android:text="@string/create_quiz_from_document"
                android:textAllCaps="false"
                android:textColor="@color/text_primary_dark"
                android:textSize="20sp"
                android:textStyle="bold"
                app:cornerRadius="10dp"
                app:icon="@drawable/ic_document_file"
                app:iconGravity="textStart"
                app:iconPadding="16dp"
                app:iconTint="@color/text_primary_dark"
                app:iconSize="30dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_quiz_section_title" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_youtube_url"
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="24dp"
                android:hint="@string/paste_youtube_url_here"
                app:boxBackgroundColor="@color/illustration_check_light"
                app:boxCornerRadiusTopStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusBottomEnd="12dp"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="0dp"
                app:hintTextColor="@color/text_secondary_gray"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btn_create_from_document"
                app:endIconMode="custom"
                app:endIconDrawable="@drawable/ic_arrow_forward"
                app:endIconCheckable="true"
                app:endIconContentDescription="Submit URL"
                app:endIconTint="@null">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_youtube_url"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:scrollHorizontally="true"
                    android:inputType="textUri"
                    android:textStyle="italic"
                    android:paddingEnd="60dp"
                    android:paddingStart="20dp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:id="@+id/ll_youtube_options"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_marginTop="6dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:visibility="gone"
                tools:visibility="visible"
                app:layout_constraintTop_toBottomOf="@id/til_youtube_url"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <ImageButton
                    android:id="@+id/btn_youtube_icon"
                    android:layout_width="56dp"
                    android:layout_margin="4dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_youtube_button"
                    android:contentDescription="@string/youtube_video_info"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_generate_from_youtube"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginStart="16dp"
                    android:text="@string/generate_quiz"
                    android:textAllCaps="false"
                    android:textColor="@color/youtube_white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:backgroundTint="@color/fab_gradient_stop"
                    app:cornerRadius="12dp"/>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_recent_quiz_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="8dp"
                android:text="@string/recent_quizzes"
                android:textColor="@color/text_primary_dark"
                android:textSize="22sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@id/tv_view_more_recent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ll_youtube_options" />

            <TextView
                android:id="@+id/tv_view_more_recent"
                style="@style/TextAppearance.Link.ForgotPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="24dp"
                android:text="@string/view_more"
                android:textSize="16sp"
                android:textColor="@color/text_link_blue"
                app:layout_constraintBottom_toBottomOf="@id/tv_recent_quiz_title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/tv_recent_quiz_title" />

            <LinearLayout
                android:id="@+id/ll_no_recent_quizzes"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:visibility="gone"
                android:layout_marginTop="15dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                app:layout_constraintTop_toBottomOf="@id/tv_recent_quiz_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:visibility="visible">

                <TextView
                    android:id="@+id/tv_no_quiz_title"
                    style="@style/TextAppearance.ScreenSubtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="@string/no_quizzes_title"
                    android:textSize="20sp"/>

                <TextView
                    android:id="@+id/tv_no_quiz_subtitle"
                    style="@style/TextAppearance.Body.Small.Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/no_recent_quizzes_subtitle"
                    android:gravity="center"/>

                <ImageView
                    android:id="@+id/iv_no_quiz_illustration"
                    android:layout_width="303dp"
                    android:layout_height="303dp"
                    android:scaleType="centerCrop"
                    android:layout_marginTop="5dp"
                    android:contentDescription="@string/progress_illustration"
                    android:src="@drawable/illustration_progress" />

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_recent_quizzes"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="24dp"
                android:overScrollMode="never"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_recent_quiz_title"
                tools:itemCount="3"
                tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/quiz_record_item"
                tools:orientation="vertical" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>