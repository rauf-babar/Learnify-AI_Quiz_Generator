<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".OnboardingContainerFragment">

    <FrameLayout
        android:id="@+id/back_button_container"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/bg_back_button_stroke"
        android:elevation="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginTop="30dp">

        <ImageView
            android:id="@+id/back_button_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_back_button"
            android:contentDescription="@string/back_button" />
    </FrameLayout>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/back_button_container"
        app:layout_constraintBottom_toTopOf="@id/dot_indicator"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="10dp" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/dot_indicator"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toTopOf="@id/next_button_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:tabBackground="@drawable/tab_selector_dot"
        app:tabIndicatorHeight="0dp"
        app:tabRippleColor="@null"
        android:layout_marginBottom="24dp" />

    <FrameLayout
        android:id="@+id/next_button_container"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="40dp">

        <ProgressBar
            android:id="@+id/onboarding_progress_bar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/circular_progress_background"
            android:progressDrawable="@drawable/custom_circular_progress"
            android:max="3"
            android:progress="1"
            android:rotation="-90" />

        <ImageButton
            android:id="@+id/next_button"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:background="@drawable/bg_next_button_circle"
            android:contentDescription="@string/next_button"
            android:src="@drawable/ic_arrow_forward_white"
            android:padding="20dp"
            android:scaleType="fitCenter"
            />
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>