<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_white"
    tools:context=".QuizConfigFragment">

    <FrameLayout
        android:id="@+id/back_button_container"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/bg_back_button_stroke"
        android:elevation="1dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_back_button"
            android:contentDescription="@string/back_button"/>
    </FrameLayout>

    <TextView
        android:id="@+id/tv_config_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/configure_quiz"
        android:textColor="@color/text_primary_dark"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/back_button_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@color/illustration_bg_lavender_medium"
        app:layout_constraintTop_toBottomOf="@id/tv_config_title">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/number_of_questions"
                android:textColor="@color/text_primary_dark"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_marginTop="12dp"
                android:weightSum="3">

                <TextView
                    android:id="@+id/btn_q5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/_5"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:background="@drawable/bg_button_solid_purple"
                    android:textColor="@color/white"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:id="@+id/btn_q10"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/_10"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:background="@drawable/bg_button_stroked_gray"
                    android:textColor="@color/text_primary_dark"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:id="@+id/btn_q15"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/_15"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:background="@drawable/bg_button_stroked_gray"
                    android:textColor="@color/text_primary_dark"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/difficulty_level"
                android:textColor="@color/text_primary_dark"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="24dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_marginTop="12dp"
                android:weightSum="3">

                <TextView
                    android:id="@+id/btn_easy"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/easy"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:background="@drawable/bg_button_stroked_gray"
                    android:textColor="@color/text_primary_dark"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:id="@+id/btn_medium"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/medium"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:background="@drawable/bg_button_solid_purple"
                    android:textColor="@color/white"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:id="@+id/btn_hard"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/hard"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:background="@drawable/bg_button_stroked_gray"
                    android:textColor="@color/text_primary_dark"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="32dp"
                android:background="@color/light_white"
                android:padding="12dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:contentDescription="@string/time"
                    android:src="@drawable/ic_time"
                    app:tint="@color/figma_purple_main"/>

                <TextView
                    android:id="@+id/tv_estimated_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/estimated_time"
                    android:textColor="@color/figma_purple_main"
                    android:textStyle="bold"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_start_quiz"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="24dp"
                android:text="@string/start_quiz"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/youtube_white"
                app:backgroundTint="@color/figma_purple_main"
                app:cornerRadius="12dp"/>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>