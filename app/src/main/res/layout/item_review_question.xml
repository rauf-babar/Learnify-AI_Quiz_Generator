<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/white"
    app:strokeColor="@color/fab_gradient_start"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/tv_question_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/question"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary_dark"
            android:layout_marginBottom="16dp"/>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_opt_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            app:cardCornerRadius="10dp"
            app:strokeWidth="1dp"
            app:cardElevation="0dp">
            <TextView android:id="@+id/tv_opt_1" android:padding="12dp" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_opt_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            app:cardCornerRadius="10dp"
            app:strokeWidth="1dp"
            app:cardElevation="0dp">
            <TextView android:id="@+id/tv_opt_2" android:padding="12dp" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_opt_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            app:cardCornerRadius="10dp"
            app:strokeWidth="1dp"
            app:cardElevation="0dp">
            <TextView android:id="@+id/tv_opt_3" android:padding="12dp" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_opt_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="10dp"
            app:strokeWidth="1dp"
            app:cardElevation="0dp">
            <TextView android:id="@+id/tv_opt_4" android:padding="12dp" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/tv_explanation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/illustration_check_light"
            android:padding="12dp"
            android:layout_marginTop="4dp"
            android:textSize="16sp"
            android:maxLines="2"
            android:ellipsize="end"/>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>